# create class for an object that stores a value and the next position
class LinkedList():
    def __init(self,thevalue,thenext=None):
        self.value = thevalue
        self.next = thenext
    def setvalue(self,newvalue):
        self.value = str(newvalue)
    def setnext(self,newnext):
        self.next = newnext

        
# creating the objects

node1 = LinkedList()
node1.setvalue(3)
node2 = LinkedList()
node2.setvalue(5)
node3 = LinkedList() 
node3.setvalue(7)
#creating the pointer

node1.setnext(node2)
node2.setnext(node3)

#Print list

while node1.next != None:
    print(node1.value)
    node1 = node1.next
print(node1)